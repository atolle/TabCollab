@model TabRespository.ViewModels.TabIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tabs for @Model.ProjectName</h2>

<p>
    @Html.ActionLink("Back To Projects", "Index", "Projects", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("New Tab", "New", "Tabs", new {id = Model.ProjectId}, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tab in Model.Tabs)
        {
            <tr>
                <td>@Html.ActionLink(@tab.Name, "Index", "TabVersions", new { id = tab.Id }, null)</td>
                <td>@tab.Description</td>
                <td>@Html.ActionLink("New Tab Version", "New", "TabVersions", new { id = tab.Id }, new { @class = "btn btn-primary" })</td>
                <td>@Html.ActionLink("Delete", "Delete", "Tabs", new { id = tab.Id }, new { @class = "btn btn-danger" })</td>
            </tr>
        }
    </tbody>
</table>