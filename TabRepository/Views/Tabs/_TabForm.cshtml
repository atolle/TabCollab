@model TabRepository.ViewModels.TabFormViewModel


<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            @if (String.IsNullOrEmpty(Model.Name))
            {
                <h4 class="modal-title">New Tab for Album @Model.AlbumName</h4>
            }
            else
            {
                <h4 class="modal-title">Edit @Model.Name</h4>
            }
        </div>
        <div class="modal-body">
            <form id="tab-form" asp-controller="Tabs" asp-action="Save" data-ajax="true" data-ajax-method="POST" enctype="multipart/form-data">
                @Html.ValidationSummary() <!--Prints list of validation errors at top of form-->
                <div class="form-group">
                    @Html.LabelFor(t => t.Name)
                    @Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(t => t.Name)
                </div>
                <div class="form-group">
                    @Html.LabelFor(t => t.Description)
                    @Html.TextBoxFor(t => t.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(t => t.Description)
                </div>
                @if (String.IsNullOrEmpty(Model.Name))
                {
                <div class="form-group">
                    <label for="FileData">File</label>
                    <input class="btn btn-default" data-val="true" data-val-required="The File is required." id="FileData" name="FileData" type="file">
                    <span class="field-validation-valid" data-valmsg-for="FileData" data-valmsg-replace="true"></span>
                </div>
                }
                @Html.HiddenFor(t => t.AlbumId)
                @Html.HiddenFor(m => m.Id)
                @Html.AntiForgeryToken()                
            </form>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary button-save" form="tab-form"> Save</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
}


