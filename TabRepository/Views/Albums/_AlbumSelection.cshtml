@model IEnumerable<TabRepository.ViewModels.AlbumIndexViewModel>

<div class="modal-dialog" align="center">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Select Album</h4>
        </div>
        <div class="modal-body">
            @if (Model.Count() == 0)
            {
                <h4 style="text-align: center;">There are no albums for this project.</h4>
            }
            @foreach (var album in Model)
            {
                <div class="row">
                    <div class="panel panel-default selection-panel album-selection-panel" data-album-id="@album.Id" data-dismiss="modal" href="@Url.Action("GetAlbumFormPartialView", "Albums")">
                        <div class="panel-body">
                            <img class="img-responsive" src="@album.ImageFilePath">
                            <h3 style="margin-top: 15px; text-align: center;">@album.Name</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
