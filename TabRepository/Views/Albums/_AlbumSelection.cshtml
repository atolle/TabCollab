@model IEnumerable<TabRepository.ViewModels.AlbumIndexViewModel>

<div class="modal-dialog selection-modal" align="center">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Select Album</h4>
            <button type="button" class="close modal-close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @if (Model.Count() == 0)
            {
                <h4 style="text-align: center;">There are no albums for this project.</h4>
            }
            @foreach (var album in Model)
            {
                <div class="row">
                    <div class="card card-profile selection-panel album-selection-panel" data-album-id="@album.Id" data-dismiss="modal">
                        <div class="card-header" style="background-image: url('@(album.ImageFilePath == null ? "/images/TabCollab_icon_white_square_512.png" : album.ImageFilePath)');"></div>
                        <div class="card-body">
                            <h3 style="text-align: center;">@album.Name</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
