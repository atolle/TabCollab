@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "TabCollab";
}

<div class="center-form-outer-container" align="center">
    <div class="center-form-inner-container">
        <h2>@ViewData["Title"]</h2>
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal form-login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div style="text-align: left; margin-left: 15px;">
                    <label asp-for="Username" class="float-left"></label>
                </div>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="login-label">
                    <label asp-for="Password"></label>
                </div>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="login-label">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default button-submit-wide">Log in</button>
            </div>
        </form>
        @{
            var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
            if (loginProviders.Count == 0)
            {
                <div>
                    <p>
                        There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                        for details on setting up this ASP.NET application to support logging in via external services.
                    </p>
                </div>
            }
            else
            {
                <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <div>
                        <p>
                            @foreach (var provider in loginProviders)
                            {
                                <button type="submit" class="btn btn-default button-submit-wide" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">Log in with @provider.DisplayName</button>
                            }
                        </p>
                    </div>
                </form>
            }
        }
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal form-login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="login-label">
                    <p>
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
                    </p>
                    <p>
                        <a asp-action="ForgotPasswordPartial" id="forgot-password">Forgot your password?</a>
                    </p>
                </div>
            </div>
        </form>
    </div>
</div>

<div id='forgot-password-form-modal' class='modal fade' align="center">
    <div id='forgot-password-form-container'>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(document).on("submit", function (e, data) {
            // Show spinner on login button
            $($(document.activeElement)[0]).html('<div class="loader"></div>');

            // If this is the forgot password form, send the request via ajax so that we can show a success/failure message
            if (e.target.id == 'forgot-password-form') {
                e.preventDefault();

                var form = e.target;
                var formData = new FormData(form);

                $.ajax({
                    url: form.action,
                    type: 'POST',
                    data: formData,
                    cache: false,
                    contentType: false,
                    processData: false
                })
                .then(function (response) {
                    currentModal = $('#forgot-password-form-modal');
                    currentModal.modal('hide');
                    bootbox.dialog({
                        message: "An email has been sent with instructions on how to reset your password.",
                        buttons: {
                            confirm: {
                                label: 'Close',
                                className: 'btn-default'
                            },
                        },
                        callback: function () { }
                    });
                })
                .fail(function (error) {
                    currentModal = $('#forgot-password-form-modal');
                    currentModal.modal('hide');
                    bootbox.dialog({
                        message: "An error occurred while submitting the form.<br /><br />Error: " + error.statusText,
                        buttons: {
                            confirm: {
                                label: 'Close',
                                className: 'btn-default'
                            },
                        },
                        callback: function () { }
                    });
                });
            }
        });

        // Show modal for new tab
        $(document).on("click", "#forgot-password", function (e, data) {
            e.preventDefault();

            var href = this.href;

            $.ajax({
                url: href,
                type: 'GET',
            })
            .then(function (data) {
                $('#forgot-password-form-container').html(data);
                // Client side validation for dynamic modal injection
                $.validator.unobtrusive.parse($("#forgot-password-form"));

                currentModal = $('#forgot-password-form-modal');
                currentModal.modal('show');

            })
            .fail(function (error) {
                bootbox.alert("Unable to show forgot password form. Error: " + error.statusText);
            })
        });
    </script>
}
