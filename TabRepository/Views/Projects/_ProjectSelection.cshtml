@model IEnumerable<TabRepository.ViewModels.ProjectIndexViewModel>

<div class="modal-dialog selection-modal" align="center">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Select Project</h4>
            <button type="button" class="close modal-close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @if (Model.Count() == 0)
            {
                <h4 style="text-align: center;">You don't have any projects yet.</h4>
            }
            @foreach (var project in Model)
            { 
                <div class="row">
                    <div class="card card-profile selection-panel project-selection-panel" data-project-id="@project.Id" data-dismiss="modal">
                        <div class="card-header" style="background-image: url('@(project.ImageFilePath == null ? "/images/TabCollab_icon_white_square_512.png" : project.ImageFilePath)');"></div>
                        <div class="card-body">
                            <h3 style="text-align: center;">@project.Name</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
