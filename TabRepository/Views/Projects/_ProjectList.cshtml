@model IEnumerable<TabRepository.ViewModels.ProjectIndexViewModel>
@if (Model.Count() > 0)
{
    <div class="row list-row">

        @foreach (var project in Model)
        {
            <div class="col-lg-4" align="center">
                <div class="card card-profile">
                    <div class="card-header" style="background-image: url('@project.ImageFilePath');"></div>
                    <div class="card-body text-center">
                        <h3>@project.Name</h3>
                        <p class="m-b">Owner: @project.Owner</p>
                        @if (project.IsOwner)
                        {
                            <div class="show-items-icon-container">
                                <i class="fa fa-lg fa-chevron-down show-buttons-icon"></i>
                            </div>
                            <div class="item-container">
                                <a id="edit-project-button" style="visibility: hidden;" data-toggle="tooltip" title="Edit Project" class="list-icon pull-left white-icon" href="@Url.Action("GetProjectFormPartialView", "Projects", new { id = project.Id })"><i class="fa fa-pencil fa-lg" /></a>
                                <a id="delete-project-button" style="visibility: hidden;" data-toggle="tooltip" title="Delete Project" class="list-icon pull-right white-icon" data-name="@project.Name" href="@Url.Action("Delete", "Projects", new { id = project.Id })"><i class="fa fa-times fa-lg" /></a>
                            </div>
                            <div class="hide-items-icon-container">
                                <i class="fa fa-lg fa-chevron-up hide-buttons-icon"></i>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="flex-container-row empty-list">
        <div class="flex-container-col">
            <h2 style="color: grey">You don't have any projects. Create one!</h2>
        </div>
    </div>
}
