@model IEnumerable<TabRepository.ViewModels.ProjectIndexViewModel>

<div class="row">
    @foreach (var project in Model)
    {
        <div class="col-md-4 m-b-lg">
            <div class="panel panel-default panel-profile">
                <div class="panel-heading" style="background-image: url('@project.ImageFilePath');"></div>
                <div class="panel-body text-center">
                    <h3>@project.Name</h3>
                    <p class="m-b">Owner: @project.Owner</p>
                    <div>
                        @Html.ActionLink("New Tab", "New", "Tabs", new { id = project.Id }, new { @class = "btn btn-primary pull-left" })
                        @Html.ActionLink("Delete", "AjaxDelete", "Projects", new { id = project.Id }, new { @class = "btn btn-danger pull-right", id = "delete" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
